<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.dictionary.mapper.IUserLogMapper">
    <resultMap id="BaseResultMap" type="cn.com.dictionary.mapper.pojo.UserLogPojo">
        <result column="T_TR_LOG_ID" jdbcType="VARCHAR" property="logId"/>
        <result column="T_TR_ID" jdbcType="VARCHAR" property="userId"/>
        <result column="T_TR_LOGIN_IP_ADDRESS" jdbcType="VARCHAR" property="IpAddress"/>
        <result column="T_TR_LOGIN_STATUS" jdbcType="VARCHAR" property="loginStatus"/>
        <result column="T_TR_LOGIN_TIMESTAMP" jdbcType="DATE" property="loginTime"/>
    </resultMap>

    <sql id="baseColumns">
        t.T_TR_LOG_ID,
        t.T_TR_ID,
        t.T_TR_LOGIN_IP_ADDRESS,
        t.T_TR_LOGIN_STATUS,
        t.T_TR_LOGIN_TIMESTAMP
    </sql>

    <select id="queryNumberOfLogins" resultType="java.lang.Integer">
        select count(*)
        from T_TR_ORG_USER_LOG t
        where t.T_TR_ID = #{userId}
        and t.T_TR_LOGIN_TIMESTAMP >= DATE_SUB(NOW(),INTERVAL 10 MINUTE);
    </select>

    <select id="queryAll">
        select <include refid="baseColumns"/>
        from T_TR_ORG_USER_LOG t
        where t.T_TR_ID = #{userId}
    </select>

    <insert id="insertLoginInfo">
        insert into
            T_TR_ORG_USER_LOG(T_TR_LOG_ID,T_TR_ID,T_TR_LOGIN_IP_ADDRESS,T_TR_LOGIN_STATUS,T_TR_LOGIN_TIMESTAMP)
        values(
            #{logId,jdbcType=VARCHAR},
            #{userId,jdbcType=VARCHAR},
            #{IpAddress,jdbcType=VARCHAR},
            #{loginStatus,jdbcType=VARCHAR},
            #{NOW()}
        )
    </insert>
</mapper>